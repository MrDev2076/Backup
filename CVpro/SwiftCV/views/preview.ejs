<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Resume Preview</title>
</head>
<body>
    <h1>Resume Preview</h1>
    <h2><%= user.name %></h2>
    <p>Email: <%= user.email %></p>
    <p>Phone: <%= user.phone %></p>
    <% if (user.about) { %>
        <h3>About</h3>
        <p><%= user.about %></p>
    <% } %>
    <% if (user.address) { %>
        <h3>Address</h3>
        <p><%= user.address %></p>
    <% } %>
    <% if (user.education) { %>
        <h3>Education</h3>
        <p><%= user.education %></p>
    <% } %>
    <% if (user.experience) { %>
        <h3>Experience</h3>
        <p><%= user.experience %></p>
    <% } %>
    <% if (user.certifications) { %>
        <h3>Certifications</h3>
        <p><%= user.certifications %></p>
    <% } %>
    <% if (user.workshops) { %>
        <h3>Workshops & Training</h3>
        <p><%= user.workshops %></p>
    <% } %>
    <% if (user.languages) { %>
        <h3>Languages</h3>
        <p><%= user.languages %></p>
    <% } %>
    <% if (user.skills) { %>
        <h3>Skills</h3>
        <p><%= user.skills %></p>
    <% } %>
    
    <form action="/api/generate-pdf" method="POST">
        <input type="hidden" name="name" value="<%= user.name %>">
        <input type="hidden" name="email" value="<%= user.email %>">
        <input type="hidden" name="phone" value="<%= user.phone %>">
        <input type="hidden" name="about" value="<%= user.about %>">
        <input type="hidden" name="address" value="<%= user.address %>">
        <input type="hidden" name="education" value="<%= user.education %>">
        <input type="hidden" name="experience" value="<%= user.experience %>">
        <input type="hidden" name="certifications" value="<%= user.certifications %>">
        <input type="hidden" name="workshops" value="<%= user.workshops %>">
        <input type="hidden" name="languages" value="<%= user.languages %>">
        <input type="hidden" name="skills" value="<%= user.skills %>">
        <button type="submit">Download Resume PDF</button>
    </form>
</body>
</html>
